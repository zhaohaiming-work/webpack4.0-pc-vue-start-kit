{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "no-multiple-empty-lines": [1, {
      "max": 1
    }], //空行最多不能超过2行
    "space-before-function-paren": 0, // 函数定义时括号前面要不要有空格
    "generator-star-spacing": 0,
    "key-spacing": "off",
    "max-len": [2, 120, 2],
    "object-curly-spacing": [2, "always"],
    "comma-dangle": "off"
  }
}
