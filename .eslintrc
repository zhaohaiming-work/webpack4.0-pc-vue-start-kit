{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "plugin:vue/essential"
  ],
  "plugins": [
    // "babel",
    "html",
    // "promise",
    "vue"
    // "flow-vars",
    // "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "no-multiple-empty-lines": [1, {
      "max": 2
    }], //空行最多不能超过2行
    "space-before-function-paren": 0, // 函数定义时括号前面要不要有空格
    "generator-star-spacing": 0,
    "eqeqeq": 0, // 必须使用全等
    "key-spacing": "off",
    "max-len": [2, 120, 2],
    "object-curly-spacing": [2, "always"],
    "comma-dangle": "off"
  }
}
